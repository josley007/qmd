{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["index.ts", "src/qmd.ts", "src/collections.ts", "src/memory.ts"],
  "exclude": ["node_modules", "dist", "test", "**/*.test.ts", "migrate-schema.ts", "src/mcp.ts", "src/llm.ts", "src/formatter.ts", "src/cli.test.ts", "src/store.test.ts", "src/store-paths.test.ts", "src/eval.test.ts"]
}
